# Environment variables for Podscrape2
# Copy to .env and fill in real values. Do not commit secrets.

# Core
OPENAI_API_KEY=
ELEVENLABS_API_KEY=
LOG_LEVEL=INFO

# Database (Supabase Postgres)
# Use the standard Postgres connection string. Required for all operations.
DATABASE_URL=postgresql+psycopg://USER:PASSWORD@HOST:PORT/DB_NAME
# Optional pooled connection URL for serverless (Vercel) to avoid connection exhaustion
SUPABASE_POOL_URL=

# App settings
DATA_ROOT=./data
WEBUI_SECRET=

# Publishing
# Used by GitHub Actions and any local runs that publish RSS or Releases
GITHUB_TOKEN=
GITHUB_REPOSITORY=OWNER/REPO
RSS_PUBLIC_URL=https://podcast.paulrbrown.org/daily-digest.xml
RELEASE_TAG_PREFIX=digest-
RELEASE_RETENTION_DAYS=7

# Speech-to-Text (STT) - OpenAI Whisper only (Parakeet MLX not supported in CI/CD Linux)
STT_PROVIDER=openai  # Use OpenAI Whisper for Linux compatibility
WHISPER_MODEL=whisper-1  # OpenAI Whisper model
WHISPER_MAX_COST_PER_HOUR=10.0  # Maximum cost per hour of audio in USD

# Optional: Vercel environment convenience
VERCEL_ENV=development

